{
  "name": "govcon-far-audit",
  "version": "1.0.0",
  "private": true,
  "description": "POC - Audit Materials System with Document Processing",
  "type": "module",
  "scripts": {
    "start": "node backend/server.js",
    "start:no-clean": "PORT=${PORT:-8080} CLEAN_ON_START=false node backend/server.js",
    "cleanup": "node scripts/startup-cleanup.js",
    "dev": "nodemon backend/server.js",
    "dev:no-clean": "CLEAN_ON_START=false nodemon backend/server.js",
    "postinstall": "npm rebuild better-sqlite3 || true",
    "audit": "npm audit --omit=dev",
    "audit:ci": "npm audit --omit=dev --audit-level=high",
    "audit:fix": "npm audit fix --omit=dev || true"
  },
  "engines": {
    "node": "22.x"
  },
  "dependencies": {
    "@azure-rest/ai-document-intelligence": "^1.1.0",
    "@azure/cognitiveservices-computervision": "^8.2.0",
    "@azure/ms-rest-js": "^2.6.4",
    "axios": "^1.12.1",
    "better-sqlite3": "^11.0.0",
    "csv-parse": "^5.5.6",
    "currency.js": "^2.0.4",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "fuzzball": "^2.2.3",
    "mammoth": "^1.8.0",
    "moment": "^2.30.1",
    "multer": "^2.0.0",
    "sharp": "^0.33.1",
    "tesseract.js": "^4.1.4"
  },
  "config": {
    "unsafe-perm": true
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}

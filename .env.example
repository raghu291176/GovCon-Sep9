# Azure AI Document Intelligence Configuration
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-azure-document-intelligence-key

# Mistral OCR Configuration (Optional)
MISTRAL_OCR_ENDPOINT=https://api.mistral.ai/v1/ocr
MISTRAL_API_KEY=your-mistral-api-key

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=info

# Document Processing Configuration
DEFAULT_MAX_DATE_DIFF=14
DEFAULT_MAX_AMOUNT_DIFF=50.00
DEFAULT_MIN_SCORE=50
DEFAULT_MAX_RESULTS=10

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_BATCH_SIZE=10

# Database Configuration (if using database for GL entries)
# DATABASE_URL=mongodb://localhost:27017/govcon-audit
# DB_NAME=govcon_audit
# DB_COLLECTION_GL_ENTRIES=gl_entries

# Document Intelligence API Version
AZURE_DOCUMENT_INTELLIGENCE_API_VERSION=2024-07-31-preview

# Azure AI Vision Configuration (for receipt detection)
AZURE_VISION_ENDPOINT=https://your-vision-resource.cognitiveservices.azure.com/
AZURE_VISION_KEY=your-azure-vision-key
AZURE_VISION_API_VERSION=2024-02-01

# Receipt Detection Configuration
RECEIPT_DETECTION_CONFIDENCE_THRESHOLD=0.5
RECEIPT_MIN_BOX_SIZE=100
MAX_DETECTED_RECEIPTS=10